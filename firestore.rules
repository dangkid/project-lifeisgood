rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar autenticación
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Reglas para botones de comunicación
    match /buttons/{buttonId} {
      // Cualquiera puede leer los botones (pacientes sin login)
      allow read: if true;
      
      // Solo usuarios autenticados pueden crear/editar/borrar
      allow create, update, delete: if isAuthenticated();
    }
    
    // Reglas para perfiles de pacientes
    match /patient_profiles/{profileId} {
      // Cualquiera puede leer perfiles (para que pacientes puedan seleccionarse)
      allow read: if true;
      
      // Solo usuarios autenticados pueden crear/editar/borrar
      allow create, update, delete: if isAuthenticated();
    }
    
    // Reglas para estadísticas de perfiles
    match /patient_profiles/{profileId}/stats/{statId} {
      // Cualquiera puede leer y escribir stats (para tracking de uso)
      allow read, write: if true;
    }
    
    // Para cualquier otra colección: permitir lectura pero bloquear escritura
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
